<?xml version="1.0" encoding="UTF-8"?>
<project name="module_lpitrainer" default="compile.module.lpitrainer">
  <dirname property="module.lpitrainer.basedir" file="${ant.file.module_lpitrainer}"/>
  
  <property name="module.jdk.home.lpitrainer" value="${jdk.home.android_4.2.2_platform}"/>
  <property name="module.jdk.bin.lpitrainer" value="${jdk.bin.android_4.2.2_platform}"/>
  <property name="module.jdk.classpath.lpitrainer" value="jdk.classpath.android_4.2.2_platform"/>
  
  <property name="compiler.args.lpitrainer" value="${compiler.args}"/>
  
  <property name="lpitrainer.output.dir" value="${module.lpitrainer.basedir}/build/classes/debug"/>
  <property name="lpitrainer.testoutput.dir" value="${module.lpitrainer.basedir}/build/classes/debug"/>
  
  <path id="lpitrainer.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="lpitrainer.module.production.classpath">
    <path refid="${module.jdk.classpath.lpitrainer}"/>
    <path refid="library.support-v4-13.0.0.classpath"/>
  </path>
  
  <path id="lpitrainer.runtime.production.module.classpath">
    <pathelement location="${lpitrainer.output.dir}"/>
    <path refid="library.support-v4-13.0.0.classpath"/>
  </path>
  
  <path id="lpitrainer.module.classpath">
    <path refid="${module.jdk.classpath.lpitrainer}"/>
    <pathelement location="${lpitrainer.output.dir}"/>
    <path refid="library.support-v4-13.0.0.classpath"/>
  </path>
  
  <path id="lpitrainer.runtime.module.classpath">
    <pathelement location="${lpitrainer.output.dir}"/>
    <path refid="library.support-v4-13.0.0.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.lpitrainer">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.lpitrainer">
    <patternset refid="excluded.from.module.lpitrainer"/>
  </patternset>
  
  <path id="lpitrainer.module.sourcepath">
    <dirset dir="${module.lpitrainer.basedir}">
      <include name="build/source/r/debug"/>
      <include name="build/source/aidl/debug"/>
      <include name="build/source/rs/debug"/>
      <include name="build/source/buildConfig/debug"/>
      <include name="build/res/rs/debug"/>
      <include name="src/main/assets"/>
      <include name="src/main/java"/>
      <include name="src/main/res"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.lpitrainer" depends="compile.module.lpitrainer.production,compile.module.lpitrainer.tests" description="Compile module LPITrainer"/>
  
  <target name="compile.module.lpitrainer.production" depends="register.custom.compilers" description="Compile module LPITrainer; production classes">
    <mkdir dir="${lpitrainer.output.dir}"/>
    <javac2 destdir="${lpitrainer.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.lpitrainer}/javac">
      <compilerarg line="${compiler.args.lpitrainer}"/>
      <bootclasspath refid="lpitrainer.module.bootclasspath"/>
      <classpath refid="lpitrainer.module.production.classpath"/>
      <src refid="lpitrainer.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.lpitrainer"/>
    </javac2>
    
    <copy todir="${lpitrainer.output.dir}">
      <fileset dir="${module.lpitrainer.basedir}/build/source/r/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.lpitrainer.basedir}/build/source/aidl/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.lpitrainer.basedir}/build/source/rs/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.lpitrainer.basedir}/build/source/buildConfig/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.lpitrainer.basedir}/build/res/rs/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.lpitrainer.basedir}/src/main/assets">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.lpitrainer.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.lpitrainer.basedir}/src/main/res">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.lpitrainer.tests" depends="register.custom.compilers,compile.module.lpitrainer.production" description="compile module LPITrainer; test classes" unless="skip.tests"/>
  
  <target name="clean.module.lpitrainer" description="cleanup module">
    <delete dir="${lpitrainer.output.dir}"/>
    <delete dir="${lpitrainer.testoutput.dir}"/>
  </target>
</project>