<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ImageButton
            style="@android:style/Holo.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_open_file"
            android:src="@drawable/ic_menu_archive"
            android:id="@+id/button_file"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:contentDescription="@string/button_open_file"
            android:onClick="selectFile"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_file"
            android:layout_alignBottom="@+id/button_file"
            android:layout_toLeftOf="@+id/button_file"
            android:layout_alignParentLeft="true"
            android:textAlignment="textEnd"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_alignTop="@+id/button_file"/>

    <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar_from"
            android:layout_below="@+id/editText_file"
            android:layout_marginTop="68dp"
            android:layout_alignLeft="@+id/editText_file"
            android:layout_toLeftOf="@+id/textView_from"/>

    <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar_to"
            android:focusableInTouchMode="false"
            android:layout_below="@+id/seekBar_from"
            android:layout_alignLeft="@+id/seekBar_from"
            android:layout_marginTop="36dp"
            android:layout_toLeftOf="@+id/textView_to"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_start_test"
            android:drawableLeft="@drawable/ic_menu_play_clip"
            android:id="@+id/button_start"
            android:layout_marginTop="22dp"
            android:onClick="startTest"
            style="@android:style/Holo.ButtonBar"
            android:layout_below="@+id/seekBar_to"
            android:contentDescription="@string/button_start_test"
            android:layout_alignRight="@+id/imageView2"
            android:layout_toRightOf="@+id/seekBar_to"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView_from"
            android:minWidth="70dp"
            android:layout_alignTop="@+id/seekBar_from"
            android:layout_alignBottom="@+id/seekBar_from"
            android:layout_toLeftOf="@+id/imageView"
            android:layout_alignLeft="@+id/textView_to"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView_to"
            android:minWidth="70dp"
            android:layout_alignTop="@+id/seekBar_to"
            android:layout_above="@+id/button_start"
            android:layout_toLeftOf="@+id/imageView"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/ic_media_previous"
            android:layout_alignTop="@+id/textView_from"
            android:layout_alignBottom="@+id/textView_from"
            android:layout_toRightOf="@+id/editText_file"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/ic_media_next"
            android:layout_alignTop="@+id/textView_to"
            android:layout_alignRight="@+id/imageView"
            android:layout_toRightOf="@+id/textView_to"/>

</RelativeLayout>
